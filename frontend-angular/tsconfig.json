{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2022",
    "module": "ESNext",
    "useDefineForClassFields": false,
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["ES2022", "dom"]
  },
  // ...existing code...
  // 'files' property removed for CI conformity; entry points are handled via 'include'.
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "src/test.ts",
    "src/app/pages/cart/cart.component.spec.ts"
  ]
}
